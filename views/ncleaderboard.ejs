        }

        .nav-links {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-left: auto;
        }

        .nav-links a {
            text-decoration: none;
            color: white;
            font-size: 1.5vw;
            letter-spacing: 1px;
            margin-right: 1vw;
            text-decoration: none;
            cursor: pointer;
            color: #eee;
            transition: all 0.5s ease;
        }

        .nav-links a:after {
            content: '';
            display: block;
            width: 0;
            height: 2.5px;
            transition: all 0.5s ease;
            background: #16e16e;
        }

        .nav-links a:hover:after {
            width: 100%;
        }

        button {
